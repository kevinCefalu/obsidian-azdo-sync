{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".", //"src",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "isolatedModules": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7",
      "scripthost",
      "ES2018",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "target": "ES6"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/assets/templates/*.template.md"
  ]
}
